<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/admin_drawer">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg2_blur"
        tools:context=".ImportResults">

        <LinearLayout
            android:id="@+id/linearLayout_ImportResults"
            android:layout_width="334dp"
            android:layout_height="478dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/rounded_border_registration"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Spinner
                android:id="@+id/spinner_Course"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="30dp" />

            <Spinner
                android:id="@+id/spinner_Semester"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="30dp" />

            <Spinner
                android:id="@+id/spinner_Faculty"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="30dp" />

            <Spinner
                android:id="@+id/spinner_Exam"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="30dp" />

            <Button
                android:id="@+id/btn_AddResult"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#FF419CC2"
                android:drawableLeft="@drawable/ic_add_black"
                android:text="Add Results File" />

            <TextView
                android:id="@+id/filename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/btn_ImportResult"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_button"
                android:drawableLeft="@drawable/ic_file_upload_black"
                android:text="Import Results" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/admin_navigation_menu" />

</android.support.v4.widget.DrawerLayout>